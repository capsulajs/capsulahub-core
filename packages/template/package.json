{
  "name": "@capsulajs/package-template",
  "version": "0.0.1",
  "description": "A template package for CapsulaHub core services",
  "main": "lib/index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build:ts": "tsc -p ../../tsconfig.json",
    "build": "yarn clean && yarn build:ts",
    "clean": "rimraf lib",
    "doc": "typedoc ./src/api --out ./doc --mode file --hideGenerator",
    "test": "jest --maxWorkers=4 --env=jsdom",
    "lint": "yarn lint:md && yarn lint:ts",
    "lint:md": "remark . --rc-path ../../.remarkrc --output",
    "lint:ts": "tslint --project ../../tsconfig.lint.json",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --write '{src,tests}/**/*.{ts,tsx,js,jsx}'"
  }
}
