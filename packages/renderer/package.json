{
  "name": "@capsulajs/capsulahub-core-renderer",
  "version": "0.0.1",
  "description": "A renderer package for CapsulaHub core services",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn build:dist && yarn build:lib",
    "build:dist": "rimraf dist && parcel build src/index.ts --no-cache",
    "build:lib": "rimraf lib && tsc",
    "clean": "rimraf lib dist dist-example",
    "doc": "typedoc ./src/api --out ./doc --mode file --hideGenerator",
    "test": "NODE_ENV=test jest --maxWorkers=4 --env=jsdom --passWithNoTests",
    "lint": "yarn lint:md && yarn lint:ts",
    "lint:md": "remark . --rc-path ../../.remarkrc --output",
    "lint:ts": "tslint '{src,tests}/**/*.{ts,tsx}' --fix",
    "prettier": "prettier --write '{src,tests}/**/*.{ts,tsx}'",
    "start-example": "rimraf dist-example && NODE_ENV=test parcel example/index.html --out-dir=dist-example --no-cache",
    "cypress:debug": "cypress open",
    "cypress:run": "cypress run"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "setupFiles": [
      "./tests/setupTests.ts"
    ],
    "testRegex": "/tests/implementations/.*.spec.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/src"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@capsulajs/capsulahub-core-workspace": ">=0.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/jsdom": "^12.2.3",
    "@types/node": "^12.0.2",
    "cypress": "^3.3.0",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-wrapper": "^0.2.2"
  }
}
