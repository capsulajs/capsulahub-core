{
  "name": "@capsulajs/capsulahub-core-renderer",
  "version": "0.0.1",
  "description": "A renderer package for CapsulaHub core services",
  "main": "lib/index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn build:cjs && yarn build:es",
    "build:cjs": "rimraf lib && tsc --module commonjs --target es2015 --outDir lib",
    "build:es": "rimraf es && tsc --module esnext --target es2015 --outDir es",
    "clean": "rimraf lib es",
    "doc": "typedoc ./src/api --out ./doc --mode file --hideGenerator",
    "test": "jest --maxWorkers=4 --env=jsdom",
    "lint": "yarn lint:md && yarn lint:ts",
    "lint:md": "remark . --rc-path ../../.remarkrc --output",
    "lint:ts": "tslint '{src,tests}/**/*.{ts,tsx}' --fix",
    "prettier": "prettier --write '{src,tests}/**/*.{ts,tsx}'"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec|steps))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/src"
    ],
    "setupFiles": [
      "./tests/setupTests.ts"
    ]
  },
  "dependencies": {
    "@capsulajs/capsulahub-core-workspace": ">=0.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.2",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^12.0.2",
    "@webcomponents/custom-elements": "^1.2.4",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0"
  }
}
