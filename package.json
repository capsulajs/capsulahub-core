{
  "name": "@capsulajs/capsulahub-core",
  "version": "0.0.1",
  "description": "Core services for the CapsulaHub",
  "main": "index.js",
  "repository": "git@github.com:capsulajs/capsulahub-core.git",
  "author": "CapsulaJS",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client=yarn",
    "build": "lerna run build && node ./afterBuild.js",
    "lint": "lerna run lint",
    "start": "lerna run start",
    "test": "lerna run test --concurrency=1",
    "deploy": "lerna run deploy",
    "clean": "lerna run clean && rimraf node_modules"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://github.com/capsulajs/capsulahub-core",
  "bugs": {
    "url": "https://github.com/capsulajs/capsulahub-core/issues"
  },
  "dependencies": {
    "lerna": "^3.13.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^12.0.2",
    "codacy-coverage": "^3.4.0",
    "cypress": "^3.3.1",
    "http-server": "^0.11.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-recommended": "^3.0.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "wrapper-webpack-plugin": "^2.1.0"
  }
}
